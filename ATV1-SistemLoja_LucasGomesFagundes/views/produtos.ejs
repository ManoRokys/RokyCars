<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Carros para Compra</h1>
        </div>
        <div class="card-body">
            <div class="row">
                <% produtos.forEach(produto => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="imgs/<%= produto.img %>.jpg" class="card-img-top" alt="<%= produto.nome %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= produto.nome %></h5>
                            <p class="card-text"><%= produto.descricao %></p>
                            <p class="card-text" id="preco">
                                <strong>Cr:</strong> <%= produto.preco.toLocaleString('pt-br', {style: 'currency', currency: 'BRL'}) %>
                            </p>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<%- include ('partials/footer.ejs') %>
