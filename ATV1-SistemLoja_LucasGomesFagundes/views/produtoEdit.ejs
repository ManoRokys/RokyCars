<%- include ('partials/header.ejs')%>
<%- include ('partials/navbar.ejs')%>
 
<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="card-body">
                <h1>Editar Carro</h1>
                <hr>
            </div>
            <div class="card-body">
                <form action="/produtos/update" method="POST">
                    <label>Nome do Carro: </label>
                    <input class="form-control" type="text" name="nome" id="nome" value="<%= produto.nome %>" required>
                    <label>Preço do Carro: </label>
                    <input class="form-control" type="number" name="preco" id="preco" value="<%= produto.preco %>" required>
                    <label>Descrição do Carro: </label>
                    <input class="form-control" type="text" name="descricao" id="descricao" value="<%= produto.descricao %>" required>
                    <input type="hidden" name="id" value="<%= produto.id %>">
                    <br>
                    <input type="submit" class="btn btn-warning" value="Alterar" onclick="return confirm('Confirma as alterações para o Carro: <%= produto.nome %>')">
                </form>
            </div>
        </div>
    </div>
</div>
 
<%- include ('partials/footer.ejs')%>